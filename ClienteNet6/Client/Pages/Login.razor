@using ClienteNet6.Client.Components;

@page "/Login"
@page "/Register"

@inject NavigationManager Navigation;

@layout LoginLayout

@if (IsLogin)
{
    <LoginComponent OnRegister="@SetRegister"></LoginComponent>
}
else{
    <RegisterComponent OnClose="@SetLogin"></RegisterComponent>
}

@code {
    private bool IsLogin { get; set; } = true;

    private void SetLogin()
    {
        IsLogin = true;
    }

    private void SetRegister()
    {
        IsLogin = false;
    }
}
